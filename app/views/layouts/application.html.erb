<!DOCTYPE html>
<%= stylesheet_link_tag "my_style" %>
<html>
  <head>
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <title>WicseProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    
  </head>
  <div id="back">
    <body>
    <div id="nav_style">
    </script>
    <nav class="navbar navbar-expand-lg border navbar-dark" id="myNav">
      <a class="navbar-brand"><%= link_to 'Spot It!', root_path, class: "nav-link", id:'web_name' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon", id="toggle_hamburger"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Profile', edit_user_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Favorites', favorites_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'Log In', new_user_session_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

  <script type="text/javascript">
    $(document).ready(function(){
      setTimeout(function(){
      $('.alert').fadeOut();
      }, 2000);
  })
  </script>
  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    </div>
      <%= yield %>
    </body>
  </div>
</html>




