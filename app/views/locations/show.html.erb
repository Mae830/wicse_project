<h1><%= @location.name %></h1>
<h2><%= @location.street1 + ", " + @location.city + ", " + @location.state + " " + @location.zip %></h2>
<% if user_signed_in? %>
    <div>
        <header>Would you like to add this location to your favorites?</header>
        <%= link_to "/favorites/#{@location.id}", method: "post" do %>
            <button>yes</button>
        <% end %>
    </div>
<% end %>